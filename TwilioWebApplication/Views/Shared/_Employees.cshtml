@model IEnumerable<Employee>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="container">
<table class="table table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col" class="text-center p-1">Last Name</th>
            <th scope="col" class="text-center p-1">First Name</th>
            <th scope="col" class="text-center p-1">Assigned #</th>
            <th scope="col" class="text-center p-1">Email</th>
            <th scope="col" class="text-center p-1">Personal #</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
            //Employee e in Model <- replace bottom with if Linq not working out
            foreach (Employee emp in (from e in Model orderby e.LastName ascending select e))
            {
                    <tr class="d-dlex align-items-center">
                        
                        <th scope="row" class="text-center p-1">@emp.LastName</th>
                        <td class="text-center p-1">@emp.FirstName</td>
                        <th scope="row" class="text-center p-1">@emp.AssignedNumber</th>
                        <td class="text-center p-1">@emp.Email</td>
                        <td class="text-center p-1">@emp.PhoneNumber</td>
                        <td class="w-auto text-center p-1"><a asp-controller="Employee" asp-action="EditEmployee" asp-route-empID="@emp.EmployeeID" class="btn btn-warning">Edit</a></td>
                        <td class="w-auto text-center p-1"><a asp-controller="Employee" asp-action="DeleteEmployee" asp-route-empID="@emp.EmployeeID" class="btn btn-danger">Delete</a></td>
                    </tr>
                    count++;
                    
            }
        }
    </tbody>
</table>
</div>
