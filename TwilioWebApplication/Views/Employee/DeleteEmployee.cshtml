@model Employee

<form method="post" asp-action="DeleteEmployeeAtId">
<div class="container p-3">
    <div class="row">
 <div class="col-12">
     <h3 class="text-danger">Delete Employee</h3>
     <div class="alert alert-warning" role="alert">
         You are about to delete user @(Model.FirstName) @(Model.LastName).
         <br />
         Are you sure you would like to continue?
     </div>
 </div>
 <div class="col-6"></div>
 <div class="col-6 text-end">
     <button type="submit" asp-route-empId="@Model.EmployeeID" class="btn btn-danger" style="width:150px">Delete</button>
            <a asp-controller="Employee" asp-action="Employees"class="btn btn-secondary">Back</a>
 </div>
 </div>

</div>
</form>