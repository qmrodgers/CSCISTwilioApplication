@model IEnumerable<Employee>
@*

*@

<div class="title-box">
    <h1 class="page-title">
        Employees</h1>
        <a asp-controller="Employee" asp-action="AddNewEmployee" class="title-button">
            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
            </svg>
            <span> Add Employee</span>
        </a>
</div>
<hr class="break">
    @{
        int count = 1;
        foreach (int i in ViewData["CompanyIds"] as List<int>)
        {

            ViewData["companyId"] = i;
            <span class="box-separator-title">Company @count</span>
            <div class="list-wrapper">
            <partial name="~/Views/Shared/_Employees.cshtml" view-data="ViewData" />
            </div>
            count++;
        }


    }

