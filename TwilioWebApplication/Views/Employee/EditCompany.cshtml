@model Company

@if(ViewData["failed"] != null)
{
    <div class="alert alert-danger" role="alert">
    @(ViewData["failed"] as string)
    </div>
}

<form method="post">
    <div class="border p-4 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add New Employee</h2>
        </div>
        <div class="mb-3">
            <label asp-for="CompanyID"></label>
            <input asp-for="CompanyID" class="form-control" readonly="@(true)"/>
        </div>
        <div class="mb-3">
            <label asp-for="CompanyName"></label>
            <input asp-for="CompanyName" class="form-control"/>
            <span asp-validation-for="CompanyName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button type="submit"  asp-route-cId="@Model.CompanyID" class="btn btn-primary" style="width:150px">Confirm</button>
            <a asp-controller="Employee" asp-action="Companies"class="btn btn-secondary">Back</a>
        </div>
    </div>

</form>
